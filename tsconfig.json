{
  "compilerOptions": {
    /* Basic Options */
    "incremental": true,
    "target": "es5",
    "lib": ["dom", "esnext"],
    "outDir": "dist/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.spec.ts"]
}
